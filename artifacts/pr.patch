+        override_lang=None,
+        cfg=cfg,
+        step_log_callback=step_log.append,
+    )
+
+    assert segments and segments[0]["text"] == "hello"
+    assert info["language"] == "en"
+    assert len(calls) == 2
+    assert "word_timestamps" in calls[0]
