+    r = c.get("/")
+    assert r.status_code == 200
+    assert "rec-dash-1" in r.text or "a.mp3" in r.text
+
+
+# ---------------------------------------------------------------------------
+# Recordings list
+# ---------------------------------------------------------------------------
+
+
+def test_recordings_empty(client):
+    r = client.get("/recordings")
+    assert r.status_code == 200
+    assert "Recordings" in r.text
