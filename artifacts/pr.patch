+#!/usr/bin/env bash
+set -euo pipefail
+
+ROOT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." && pwd)"
+cd "$ROOT_DIR"
+
+COVERAGE_THRESHOLD="${COVERAGE_THRESHOLD:-90}"
+INSTALL_DEPS="${INSTALL_DEPS:-1}"
